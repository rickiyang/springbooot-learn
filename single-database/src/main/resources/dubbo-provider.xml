<?xml version="1.1" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application id="test-provider" owner="${dubbo.application.owner}" name="${dubbo.application.name}"/>

    <!--zookeeper注册中心 -->
    <dubbo:registry id="test-registry" protocol="zookeeper" address="${dubbo.application.zkAddress}"/>

    <!-- dubbo协议 -->
    <dubbo:protocol name="dubbo" port="${dubbo.application.dubboPort}"/>

    <!-- 发布这个服务 -->
    <dubbo:service protocol="dubbo" timeout="4000" connections="100"
                   interface="com.rickiyang.learn.service.DemoService"
                   ref="demoService"/>

    <!-- 和本地bean一样实现服务(或者使用注解实现) -->
    <bean id="demoService" class="com.rickiyang.learn.service.DemoServiceImpl"/>
</beans>